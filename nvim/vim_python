au FileType python set tabstop=4
    \ | set softtabstop=4
    \ | set shiftwidth=4
    \ | set textwidth=119
    \ | set expandtab
    \ | set autoindent
    \ | set fileformat=unix


let g:autopep8_max_line_length=119

let g:syntastic_python_checkers=['flake8']
