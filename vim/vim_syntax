" map files
au BufRead,BufNewFile *.map setfiletype yaml
autocmd FileType map set tabstop=2 |set expandtab

" Vim file settings
au BufNewFile,BufRead vim_* set filetype=vim

" associate Utopiafile with json filetype syntax
autocmd BufNewFile,BufReadPost Utopiafile set filetype=json

" Html
autocmd FileType html set shiftwidth=2

" Javascript
autocmd FileType javascript set expandtab|set tabstop=2

" HCL
"
au BufRead,BufNewFile *.hcl setfiletype terraform

" yaml
autocmd FileType yaml set shiftwidth=2|set tabstop=2

